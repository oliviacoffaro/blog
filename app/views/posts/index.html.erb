<h1>Top Posts</h1>

<a id="create" href="/posts/new">Create New Post</a>


<div class="post-photos">
  <% @posts.each do |post| %>
  <a class="post-a" href="/posts/<%=post.id%>">
    <figure>
      <img src="<%=post.img_url%>" alt=" ", width = 280, height= 240 />
      <figcaption>
        <%= post.title.upcase %>
      </figcaption>
    </figure>
  </a>
  <%end%>
</div>
