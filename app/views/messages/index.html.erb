 <% @messages.each do |message| %>
  <% if message.content %>
   <% user = User.find(message.user_id) %>
   <%= user.first_name %>
   <%= message.content%>
 <% end %>
<% end %>

<%= form_for [@conversation, @message], url: {action: "create"} do |f| %>
 <div class=”field”>
   <%= f.text_area :content %>
 </div>
 <%= f.hidden_field :user_id, value: current_user.id %>
 <div>
   <%= f.submit %>
 </div>
<% end %>
